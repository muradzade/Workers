@model IEnumerable<Workers.Data.Entity.Worker>
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row">
        <div class="user-data m-b-30" style="margin-left:auto ; margin-right:auto; width:50%">
            <h3 class="title-3 m-b-30">
                <i class="zmdi zmdi-account-calendar"></i>Contacts
            </h3>
            <form asp-action="Index" method="get">
                <div class="form-actions bg-light">
                    <p>
                        <input type="text" name="search" value="@ViewBag.SearchBox" />
                        <input type="submit" value="Ara" class="btn btn-primary" />
                    </p>
                </div>
            </form>

            <div class="table-responsive table-data">

                <table class="table ">
                    <thead>
                        <tr>
                            <td>
                                <a asp-action="Index" asp-route-sortBy="@ViewBag.sortByName" asp-route-sortParam="name">
                                    Ad
                                </a>
                            </td>
                            <td>
                                <a asp-action="Index" asp-route-sortBy="@ViewBag.sortBySurname" asp-route-sortParam="surname">
                                    Soyad
                                </a>
                            </td>
                            <td>Telefon</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var worker in Model)
                        {
                            <tr>
                                <td>
                                    @worker.Name
                                </td>
                                <td>
                                    @worker.Surname
                                </td>
                                <td>
                                    @worker.Phone
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Details" asp-controller="Worker" asp-route-id="@worker.Id">Detay</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
