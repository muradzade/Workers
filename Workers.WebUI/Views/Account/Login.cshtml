@model Workers.WebUI.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">          
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-form">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <form asp-action="Login" method="post">
                            <input name="returnUrl" type="hidden" value="@ViewBag.returnUrl" />
                            <div class="form-group">
                                <label>Email Adres</label>
                                <input asp-for="@Model.Email" class="au-input au-input--full" type="email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input asp-for="@Model.Password" class="au-input au-input--full" type="password">
                            </div>
                            <div class="login-checkbox">
                                <label>
                                    <a href="#">Forgotten Password?</a>
                                </label>
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>