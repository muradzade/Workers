@model Workers.WebUI.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">Şifre yenile</div>
            <div class="card-body">
                <div class="text-danger" asp-validation-summary="All"></div>
                <hr>
                <form asp-action="ChangePassword" method="post" novalidate="novalidate">
                    <div class="form-group">
                        <label asp-for="@Model.CurrentPassword" class="control-label mb-1"></label>
                        <input asp-for="@Model.CurrentPassword" class="form-control identified visa">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.NewPassword" class="control-label mb-1"></label>
                        <input asp-for="@Model.NewPassword" class="form-control identified visa">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ConfirmNewPassword" class="control-label mb-1"></label>
                        <input asp-for="@Model.ConfirmNewPassword" class="form-control identified visa">
                    </div>
                    <div>
                        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                            <i class="fa fa-lock fa-lg"></i>&nbsp;
                            <span id="payment-button-amount">Güncelle</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>